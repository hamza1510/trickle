<br>

<div class="container">
	<div class="row">
		<div class="col-lg-12">

			<div class="row">
				<div class="col-lg-6">
			  	<h3 class="card-title"><%= @campaign.name %></h3>
		    	<div class="card">
		      	<div class="card-block">
			        <p class="card-text">Heading: <%= @campaign.title %></p>
			        <p class="card-text">Description: <%= @campaign.description %></p>
			        <p class="card-text">Active: <%= @campaign.active %></p>
			        <p class="card-text">Currently <%= pluralize(@campaign.pages.count, "page") %></p>
					    <%= link_to "Edit", edit_admins_campaign_path(@campaign), class: "btn btn-secondary" %>
					    <%= link_to "Add page", new_admins_campaign_page_path(@campaign), class: "btn btn-primary" %>
					    <%= link_to "Simulate user", campaign_path(@campaign), class: "btn btn-md btn-success" %>
					  </div>
					</div>
					<br>
				</div>

				<div class="col-lg-6">
					<h3 class="card-title">Pages</h3>
					<% if @campaign.pages.any? %>
						<ul class="list-group">
							<% @campaign.pages.each do |page| %>
					  		<li class="list-group-item justify-content-between">
					  			<%= link_to "#{page.title}", admins_campaign_page_path(@campaign, page) %>
					  		</li>
							<% end %>
						</ul>
					<% else %>
						<p>You haven't added any pages to this campaign yet.</p>
					<% end %>
				</div>
			</div>

		</div>
	</div>
</div>